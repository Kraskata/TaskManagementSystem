@model IEnumerable<AssignmentServiceModel>

@{
    ViewData["Title"] = "My Assignments";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (Model.Any() == false)
{
    <h3 class="text-center">You have no assignments yet!</h3>
}

<div class="row">
    @foreach (var assignment in Model)
    {
        <partial name="_AssignmentPartial" model="@assignment" />
    }
</div>